@model ContactModel

<div class="apagar-confirmacao">
    <h2>Confirmação de Exclusão</h2>

    <div class="contato-info">
        <i class='bx bxs-user-circle'></i>

        <h3 class="hub">Nome</h3>
        <p>@Model.Nome</p>

        <h3 class="hub">Telefone</h3>
        <p>@Model.Numero</p>

        <h3 class="hub">Email</h3>
        <p>@Model.Email</p>
    </div>

    <p>Você tem certeza de que deseja excluir este contato?</p>

    <form asp-controller="Contato" asp-action="Apagar" method="post">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger" style="background-color: red; color: white;">Excluir</button>
        <a href="@Url.Action("Index", "Contato")" class="btn btn-secondary" style="background-color: gray; color: white;">Cancelar</a>
    </form>
</div>
